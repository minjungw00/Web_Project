# Compose variables for server deployment (copy to $HOME/srv/web_project/.env)

# Tags (can be overridden during deploy.yml run)
FE_TAG=latest
BE_TAG=latest
NGINX_TAG=latest
DB_TAG=8.4

# Images
FRONTEND_IMAGE=ghcr.io/minjungw00/web-project-frontend
BACKEND_IMAGE=ghcr.io/minjungw00/web-project-backend
NGINX_IMAGE=ghcr.io/minjungw00/web-project-nginx
MYSQL_IMAGE=mysql

# Network and volumes
COMPOSE_NETWORK=webnet

# Frontend dist path inside the artifact image
FE_DIST_PATH=/opt/dist

# Mount sources (절대 경로를 지정하면 bind mount, 아닌 경우 named volume)
MYSQL_DATA_MOUNT=mysql-data
CERTBOT_MOUNT=certbot
LETSENCRYPT_MOUNT=letsencrypt
LETSENCRYPT_LOG_MOUNT=letsencrypt-log
FE_DIST_MOUNT=frontend-dist

# Database runtime env (example defaults; do NOT commit secrets)
MYSQL_ROOT_PASSWORD=change_me
MYSQL_DATABASE=appdb
MYSQL_USER=app
MYSQL_PASSWORD=change_me
