###############################################
# Backend env (example)
# - Copy to $SERVER_ROOT/application/backend/.env.production on server
# - Secrets policy: replace secrets with __REPLACE_ME__; do not commit real values
###############################################

SPRING_PROFILES_ACTIVE=prod

## Database (required)
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/appdb?useSSL=false&allowPublicKeyRetrieval=true&characterEncoding=UTF-8&serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=app
SPRING_DATASOURCE_PASSWORD=__REPLACE_ME__

## Optional: Server tuning
SERVER_PORT=8080
JAVA_TOOL_OPTIONS=-Xms512m -Xmx512m

## If your app uses JWT or OAuth, add secrets here (examples):
# JWT_SECRET=__REPLACE_ME__
# OAUTH_CLIENT_ID=__REPLACE_ME__
# OAUTH_CLIENT_SECRET=__REPLACE_ME__

APP_CORS_ORIGINS=https://example.com
